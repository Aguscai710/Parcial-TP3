<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="343dp"
        android:layout_height="236dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="343dp"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingTop="14dp"
            android:paddingRight="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivAirlineLogo"
                    android:layout_width="48dp"
                    android:layout_height="32dp"
                    android:background="@color/blue"
                    android:contentDescription="@string/logotype" />

                <TextView
                    android:id="@+id/txtAirlineName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="16dp"
                    android:fontFamily="@font/inter"
                    android:hint="@string/airline_name"
                    android:paddingStart="8dp"
                    android:paddingEnd="0dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginStart="80dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/reloj"
                    android:contentDescription="@string/clock" />

                <TextView
                    android:id="@+id/txtDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:height="16dp"
                    android:fontFamily="@font/inter"
                    android:hint="@string/_1_hr_40_min"
                    android:paddingStart="8dp"
                    android:paddingEnd="0dp"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <LinearLayout
                android:layout_width="62dp"
                android:layout_height="45dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtDepartureAirportId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:hint="@string/id"
                    android:textColor="@color/blue2"
                    android:textFontWeight="700"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtDepartureAirport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:hint="@string/airport_name"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="41dp"
                android:layout_marginStart="30dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/airplane"
                    android:src="@drawable/airplane" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="62dp"
                android:layout_height="45dp"
                android:layout_marginStart="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtArrivalAirportId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:hint="@string/id"
                    android:textColor="@color/blue2"
                    android:textFontWeight="700"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtArrivalAirport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:hint="@string/airport_name"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="343dp"
            android:layout_height="36dp"
            android:layout_marginTop="107dp"
            android:src="@drawable/line"
            android:contentDescription="@string/line" />

        <LinearLayout
            android:layout_width="343dp"
            android:layout_height="102dp"
            android:layout_marginTop="143dp"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp">

            <androidx.cardview.widget.CardView
                android:layout_width="319dp"
                android:layout_height="36dp"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="109dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/chair" />

                    <TextView
                        android:id="@+id/tvClass"
                        android:layout_width="86dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/inter"
                        android:hint="@string/seat_class"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginStart="215dp"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="37dp"
                        android:layout_height="16dp"
                        android:fontFamily="@font/inter"
                        android:text="@string/from"
                        android:textFontWeight="400"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/inter"
                        android:hint="@string/_1_000"
                        android:textFontWeight="600"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="319dp"
                android:layout_height="44dp"
                android:layout_marginTop="8dp">

                <Button
                    android:layout_width="319dp"
                    android:layout_height="44dp"
                    android:backgroundTint="@color/yellow"
                    android:text="@string/view_details"
                    android:textSize="14sp"
                    app:cornerRadius="0dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>